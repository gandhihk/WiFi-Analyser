<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi Strength Analyser"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/wifi_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="WiFi Status : "
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/get_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="getStrength"
        android:text="Get Strength"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/strength_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@+id/get_strength"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/strength_value"/>

    <Button
        android:id="@+id/get_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/view"
        android:onClick="getDetails"
        android:text="Get Details"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>